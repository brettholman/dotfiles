alias study='open /site/notes/courses.washington.edu/index.html'
alias fixSynergy='ps aux | grep -i syngery | grep -v grep | awk "{print $2}" | xargs sudo kill -9'

# Emacs
alias emacs='/usr/local/Cellar/emacs/26.1_1/bin/emacs'

